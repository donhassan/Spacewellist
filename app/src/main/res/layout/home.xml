<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9">

    <ImageView
        android:id="@+id/ensiklopedia"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ensiklopedia"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_encyclopedia"
        android:layout_width="287dp"
        android:layout_height="162dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custombutton2"
        android:fontFamily="@font/ailerons"
        android:text="ENCYCLOPEDIA"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ensiklopedia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_news"
        android:layout_width="287dp"
        android:layout_height="162dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custombutton2"
        android:fontFamily="@font/ailerons"
        android:text="NEWS"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_encyclopedia"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/pinkplanet"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/pinkplanet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>